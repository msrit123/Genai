import spacy

nlp = spacy.load("en_core_web_md")

# 1. Take two news headlines
h1 = input("Enter headline 1: ")
h2 = input("Enter headline 2: ")

# 2. Sentence similarity
doc1 = nlp(h1)
doc2 = nlp(h2)

print("Sentence similarity:", doc1.similarity(doc2))

# 3. Keyword similarity (example: economy and finance)
k1 = nlp("economy")
k2 = nlp("finance")

print("Keyword similarity (economy vs finance):", k1.similarity(k2))
